
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TextChatService = game:GetService("TextChatService")
local remote = ReplicatedStorage:FindFirstChild("RemoteChatSender")
if not remote then
    warn("RemoteChatSender not found in ReplicatedStorage")
    return
end
if _G.__ChatHooked then return end
_G.__ChatHooked = true
remote.OnClientEvent:Connect(function(message)
	if typeof(message) == "string" then
		print("Client received message to send:", message)
		TextChatService:SendAsync(message)
	end
end)
