
local runService = game:GetService("RunService")
local camera = workspace.CurrentCamera
local player = game:GetService("Players").LocalPlayer

local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("ImageLabel")
frame.Image = "rbxassetid://95568512361445"
frame.Size = UDim2.new(0, 100, 0, 100)
frame.BackgroundTransparency = 1
frame.Parent = screenGui

local speed = 80 -- was 20, now MUCH faster
while frame.AbsoluteSize.X == 0 or frame.AbsoluteSize.Y == 0 do
	runService.RenderStepped:Wait()
end

local viewport = camera.ViewportSize
local position = Vector2.new(
	math.random(0, viewport.X - frame.AbsoluteSize.X),
	math.random(0, viewport.Y - frame.AbsoluteSize.Y)
)
local direction = Vector2.new(math.random() - 0.5, math.random() - 0.5).Unit
frame.Position = UDim2.new(0, position.X, 0, position.Y)

task.spawn(function()
	while true do
		local clone = frame:Clone()
		clone.Parent = screenGui
		clone.Position = frame.Position
		task.wait(0.01)
	end
end)

runService.RenderStepped:Connect(function()
	viewport = camera.ViewportSize
	position = position + direction * speed
	local bounced = false

	if position.X <= 0 then
		position = Vector2.new(0, position.Y)
		direction = Vector2.new(-direction.X, direction.Y)
		bounced = true
	elseif position.X >= viewport.X - frame.AbsoluteSize.X then
		position = Vector2.new(viewport.X - frame.AbsoluteSize.X, position.Y)
		direction = Vector2.new(-direction.X, direction.Y)
		bounced = true
	end

	if position.Y <= 0 then
		position = Vector2.new(position.X, 0)
		direction = Vector2.new(direction.X, -direction.Y)
		bounced = true
	elseif position.Y >= viewport.Y - frame.AbsoluteSize.Y then
		position = Vector2.new(position.X, viewport.Y - frame.AbsoluteSize.Y)
		direction = Vector2.new(direction.X, -direction.Y)
		bounced = true
	end
	if bounced then
		local clone = frame:Clone()
		clone.Parent = screenGui
		clone.Position = UDim2.new(0, position.X, 0, position.Y)
	end

	frame.Position = UDim2.new(0, position.X, 0, position.Y)
end)

task.spawn(function()
	local soundTemplate = Instance.new("Sound")
	soundTemplate.SoundId = "rbxassetid://3200130016"
	soundTemplate.Volume = 10
	soundTemplate.Parent = workspace

	while true do
		local s = soundTemplate:Clone()
		s.Parent = workspace
		s:Play()
		s.Ended:Connect(function()
			s:Destroy()
		end)
		task.wait()
	end
end)
